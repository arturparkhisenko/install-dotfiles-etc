{
  "extends": [
    "eslint:recommended",
    "airbnb/base",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jquery": true
  },
  "globals": {
    "$": true,
    "jQuery": true,
    "Polymer": true,
    "app": true
  },
  "plugins": [
    "html",
    "import",
    "react"
  ],
  "rules": {
    "no-console": 0,
    "react/prop-types": 0,
    "semi": ["error", "always"]
  }
}
