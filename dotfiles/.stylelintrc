{
  "extends": "stylelint-config-standard",
  "processors": ["stylelint-processor-html"],
  "rules": {
    "at-rule-empty-line-before": "never",
    "comment-empty-line-before": [
      "always",
      {
        "except": [
          "first-nested"
        ]
      }
    ],
    "comment-whitespace-inside": "never",
    "indentation": 2
  }
}
